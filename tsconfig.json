{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2015", "es2016", "es2017"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 